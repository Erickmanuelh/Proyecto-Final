                                        <li>@Html.ActionLink("Empleado", "Create", "Empleados")</li>
                                        <li>@Html.ActionLink("Departamento", "Create", "Departamentos")</li>
                                        <li>@Html.ActionLink("Cargo", "Create", "Cargos")</li>
